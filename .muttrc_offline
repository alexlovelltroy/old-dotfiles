          +alex.lovelltroy.gmail.com/archive \
          +alex.lovelltroy.gmail.com/sent \
          +alex.lovelltroy.gmail.com/drafts \

# Other special folders.
set mbox      = "+alex.lovelltroy.gmail.com/archive"
